<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="113.0" prefWidth="314.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rprtr258.client.ConnectionWindowController">
   <children>
      <HBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Host:">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin></Label>
            <TextField fx:id="hostTextField" prefHeight="15.0" prefWidth="250.0" promptText="e.g.  192.168.1.139" text="localhost">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></TextField>
         </children>
         <padding>
            <Insets left="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label text="Port:">
               <HBox.margin>
                  <Insets top="4.0" />
               </HBox.margin></Label>
            <TextField fx:id="portTextField" prefHeight="15.0" prefWidth="250.0" promptText="e.g. 12345" text="12345">
               <HBox.margin>
                  <Insets left="13.0" />
               </HBox.margin></TextField>
         </children>
         <padding>
            <Insets left="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label fx:id="statusLabel" prefHeight="17.0" prefWidth="223.0" text="Connection status">
               <HBox.margin>
                  <Insets left="10.0" top="7.0" />
               </HBox.margin>
            </Label>
            <Button fx:id="connectButton" mnemonicParsing="false" prefHeight="113.0" prefWidth="113.0" text="Connect">
               <HBox.margin>
                  <Insets bottom="10.0" right="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
